{
  "name": "fluent-check",
  "version": "1.0.0",
  "description": "A type-safe fluent-based property based checker natively written for Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint --ext '.js,.ts' src test",
    "test": "mocha",
    "prepare": "tsc",
    "coverage": "nyc mocha -reporter=min -r source-map-support",
    "experiment:1": "mocha --require ts-node/register test/experiments/experiment1.test.ts --grep \"Experiment 1\" --timeout 30000",
    "experiment:2": "mocha --require ts-node/register test/experiments/experiment2.test.ts --grep \"Experiment 2\" --timeout 30000",
    "experiment:3": "mocha --require ts-node/register test/experiments/experiment3.test.ts --grep \"Experiment 3\" --timeout 60000",
    "experiment:edge-case": "mocha --require ts-node/register test/experiments/edge-case-influence.test.ts --grep \"Edge Case Influence\" --timeout 30000",
    "experiments": "npm run experiment:1 && npm run experiment:2 && npm run experiment:3 && npm run experiment:edge-case"
  },
  "keywords": [
    "testing",
    "pbt",
    "typescript"
  ],
  "author": "André Restivo, Hugo Sereno Ferreira, Rui Gonçalves",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fluent-check/fluent-check"
  },
  "devDependencies": {
    "@types/chai": "^5.2.0",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "chai": "^5.2.0",
    "eslint": "^9.23.0",
    "jstat": "^1.9.6",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
  }
}
