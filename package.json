{
  "name": "fluent-check",
  "version": "1.0.0",
  "description": "A type-safe fluent-based property based checker natively written for Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "test": "mocha",
    "prepare": "husky && tsc",
    "coverage": "nyc mocha -reporter=min -r source-map-support",
    "profile:cpu": "./scripts/profile-cpu.sh",
    "profile:heap": "./scripts/profile-heap.sh",
    "simulate:mapped-arbitrary": "mocha test/simulations/mapped-arbitrary-validation.ts --timeout 120000"
  },
  "keywords": [
    "testing",
    "pbt",
    "typescript"
  ],
  "author": "André Restivo, Hugo Sereno Ferreira, Rui Gonçalves",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fluent-check/fluent-check"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "0x": "^6.0.0",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jstat": "^1.9.6",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.48.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
  }
}
