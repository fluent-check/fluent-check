{
  "name": "fluent-check",
  "version": "1.0.0",
  "description": "A type-safe fluent-based property based checker natively written for Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "test": "mocha",
    "test:types": "tsc --project tsconfig.types.json",
    "prepare": "husky && tsc",
    "coverage": "nyc mocha -reporter=min -r source-map-support",
    "profile:cpu": "./scripts/profile-cpu.sh",
    "profile:heap": "./scripts/profile-heap.sh",
    "evidence:setup": "./scripts/evidence/setup-python.sh",
    "evidence:generate": "npx tsx scripts/evidence/calibration.study.ts && npx tsx scripts/evidence/detection.study.ts && npx tsx scripts/evidence/efficiency.study.ts && npx tsx scripts/evidence/exists.study.ts && npx tsx scripts/evidence/shrinking.study.ts && npx tsx scripts/evidence/double-negation.study.ts",
    "evidence:analyze": "./scripts/evidence/run-analysis.sh",
    "evidence": "npm run evidence:generate && npm run evidence:analyze",
    "evidence:quick": "QUICK_MODE=1 npm run evidence:generate && npm run evidence:analyze"
  },
  "keywords": [
    "testing",
    "pbt",
    "typescript"
  ],
  "author": "André Restivo, Hugo Sereno Ferreira, Rui Gonçalves",
  "license": "MIT",
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "jstat": "^1.9.6",
    "ts-markdown-builder": "^0.5.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fluent-check/fluent-check"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "0x": "^6.0.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.50.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
  }
}
